#%RAML 0.8
title: Process API
version: v1.0

schemas:
  - account: !include schemas/account_schema.json

traits: !include ./traits/trait-collection.yaml

/migrateAccounts:
  displayName: migrateAccounts
  post:
    description: |
      Migrate accounts from A instance to B instance
    queryParameters:
      modifiedAfter:
        displayName: Only those modified after this date
        minLength: 23
        maxLength: 29
        example: 2016-03-24T14:00:00.000+01:00
      sourceHost:
        displayName: Source system host
        required: true
        example: localhost
      sourcePort:
        displayName: Source system port
        required: true
        example: 8083
      destinationHost:
        displayName: Destination system host
        required: true
        example: localhost
      destinationPort:
        displayName: Destination system port
        required: true
        example: 8084
    responses:
      201:
        description: Migrated
        body:
          application/json:
            example: |
              {
                "message": "Accounts were successfully migrated."
              }